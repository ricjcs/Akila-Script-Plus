#VERIFICAÇÃO ROOT {{{
select_root(){
	if [[ ! $(whoami) = "root" ]]; then
		echo "================================================================================"
    	echo "OPS! VOCÊ TEM QUE EXECUTAR O SCRIPT COMO ROOT"
		echo "================================================================================"
    	break
	fi
}
#}}}
#FUNÇÂO PARA GERAR OPÇÂO ESCOLHIDA PELO USUARIO {{{
select_op(){
case $op in
	1)	#INSTALANDO UBUNTU CODEC
		echo "================================================================================"
		echo "AKILA SCRIPT INSTALL"
		echo "================================================================================"
		apt-get install ubuntu-restricted-extras -y
		echo
		echo "DESEJA INSTALAR OUTRO PACOTE?[s/n]"
		read -p "DIGITE: " esc
		case $esc in
			S|s)
				sleep 2
				tela_opcoes
				select_op
				;;
			N|n)
				echo
				echo "OBRIGADO POR BAIXAR NOSSO SCRIPT :)"
				sleep 2
				break
				;;
			  *)
			  	echo
			  	echo "VOCÊ NÃO DIGITOU CORRETAMENTE!"
			  	echo "TENTE NOVAMENTE!"
			  	sleep 2
			  	break
				;;
		esac
		;;
	2)	#INSTALANDO XUBUNTU CODEC
		echo "================================================================================"
		echo "AKILA SCRIPT INSTALL"
		echo "================================================================================"
		apt-get install xubuntu-restricted-extras -y
		echo
		echo "DESEJA INSTALAR OUTRO PACOTE?[s/n]"
		read -p "DIGITE: " esc
		case $esc in
