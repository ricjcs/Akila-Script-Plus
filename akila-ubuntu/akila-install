		echo "AKILA SCRIPT INSTALL"
		echo "================================================================================"
		read -p "DIGITE O NOME DO PACOTE PARA SER REMOVIDO -> " pack
		read -p "DESEJA REMOVER O PACOTE $pack?[s/n] ->" packr
		case $packr in
			S|s)
				echo
				apt-get purge $pack
				;;
			N|n)
			 	sleep 2
				tela_opcoes
				select_op
				;;
			  *)
			  	echo "VOCÊ NÃO DIGITOU CORRETAMENTE!"
			  	echo "TENTE NOVAMENTE!"
